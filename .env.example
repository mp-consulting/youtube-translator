# YouTube Translator Configuration
# Copy this file to .env and configure your settings

# OpenAI API Key (required for ChatGPT translation)
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Model (default: gpt-4o-mini)
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# Default source language code (default: en)
SOURCE_LANG=en

# Default target language code (default: en)
TARGET_LANG=fr

# Always use ChatGPT for translation (default: false)
# Set to 'true' to enable
USE_CHATGPT=true
